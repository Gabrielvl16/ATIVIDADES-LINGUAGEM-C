#include <stdio.h>
#include <stdlib.h>

int main() {
// Seção das variaveis 
float diametro;
float raio;
float cumprimento;
float area;

// Declarando as variaveis 
printf("Escreva o valor do raio de uma circunferência: \n");
scanf("%f", &raio);

// Imprimindo valores 
diametro = raio * 2;
printf("O diametro da sua circunferência e: %2.f \n", diametro);
 
cumprimento = 2 * 3,14 * raio;
printf("O cumprimento de sua cincunferencia e: %2.f \n", cumprimento);

raio = raio * raio;
area = raio * 3,14;
printf("A area de sua circunferência e: %2.f, \n",area);

return 0;
}
